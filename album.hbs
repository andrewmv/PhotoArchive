<!DOCTYPE html>
<html>

  <head>
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, user-scalable=no" />
      <meta name="robots" content="noindex">
      <title>{{gallery.title}} - {{album.title}}</title>
      <link rel="stylesheet" href="{{relative 'public/lightgallery2/css/lightgallery-bundle.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/core.css'}}" />
      <link rel="stylesheet" href="{{relative 'public/theme.css'}}" />

      <link rel="icon" type="image/png" href="{{relative 'public/icon.png'}}">

      <link rel="stylesheet" href="{{relative 'public/justifiedGallery.min/justifiedGallery.min.css'}}" />

  </head>

  <body>

    {{> content}}
    {{> video-loader}}

    <!-- jquery -->
    <script src="{{relative 'public/jquery.min.js'}}"></script>


    <!-- LightGallery -->
    <script src="{{relative 'public/lightgallery2/lightgallery.min.js'}}"></script>
    <script src="{{relative 'public/lightgallery2/plugins/zoom/lg-zoom.umd.js'}}"></script>
    <script src="{{relative 'public/lightgallery2/plugins/thumbnail/lg-thumbnail.umd.js'}}"></script>
    <script type="text/javascript">
      lightGallery(document.getElementById('gallery'), {
        speed: 400,
        loop : false,
        controls: true,
        counter: true,
        download: true,
        appendSubHtmlTo: ".lg-sub-html", 
        licenseKey: "GNU GPL license v3", // not for commercial use!
        
        thumbnail: true,
        toggleThumb: true,
        animateThumb: true,
        allowMediaOverlap: false,
        enableThumbDrag: true,
        thumbWidth: 75,
        thumbHeight: "50px",

        mobileSettings: { controls: false, showCloseIcon: true, download: true },

        plugins: [lgZoom, lgThumbnail]
      });
      console.log("started lightgallery")
    </script>

    <!-- Justified gallery -->
    <script src="{{relative 'public/justifiedGallery.min/jquery.justifiedGallery.min.js'}}"></script>
    <script>
      $("#gallery").justifiedGallery({
        rowHeight: 240,
        maxRowHeight: "200%",
        lastRow: 'nojustify',
        margins: 32,
        captions: false,
        border: 0,
        cssAnimation: true,

      });
      console.log("started justifiedGallery")
    </script>


  </body>
</html>